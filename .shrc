# Pull in global shell config
test -r /etc/shrc && . /etc/shrc

alias dvtm='abduco -A dvtm dvtm'
alias lc='ls -C'
alias ll='ls -l'
alias ls='ls -1A --color=auto'
alias pstree='pstree -Uachlnp'
alias rm='rm -d'
alias weechat='abduco -A weechat weechat'

set -o physical
set -o vi

HISTCONTROL=ignoreboth
HISTFILESIZE=10000
HISTSIZE=12000
PSC=Ï„

master_key=`head -1 <"$HOME"/.secret/master_key`
eval `keychain --agents gpg,ssh --eval --noask --nogui --quiet "$master_key" id_rsa`
unset master_key

. /usr/share/chruby/chruby.sh
